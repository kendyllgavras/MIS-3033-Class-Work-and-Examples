        <TextBox x:Name="txtstreetname" HorizontalAlignment="Left" Height="23" Margin="520,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtbxcity" HorizontalAlignment="Left" Height="23" Margin="473,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"/>
        <TextBox x:Name="txtbxstate" HorizontalAlignment="Left" Height="23" Margin="618,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="txtbxzipcode" HorizontalAlignment="Left" Height="23" Margin="500,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lstbxstudents" HorizontalAlignment="Left" Height="152" Margin="375,257,0,0" VerticalAlignment="Top" Width="392" MouseDoubleClick="lstbxstudents_MouseDoubleClick"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="107,307,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
